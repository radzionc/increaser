{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../ui/timeTracking/report/state/useTrackedTimePreference.tsx",
    "../ui/timeTracking/report/state/useTrackedTimeReportPreferences.tsx",
    "../ui/timeTracking/report/TrackedTimeProvider.tsx",
    "../ui/timeTracking/report/TrackedTimeReportProvider.tsx",
    "../ui/workBudget/WorkBudgetReport.tsx",
    "../ui/workBudget/WorkBudgetWeeksReport.tsx",
    "../ui/workBudget/AvgDay.tsx",
    "../ui/workBudget/WorkBudgetDaysReport.tsx",
    "../ui/projects/budget/ProjectsBudgetReport.tsx",
    "../ui/projects/budget/ProjectsBudgetVisualization.tsx",
    "../ui/projects/budget/WorkingDaysInput.tsx",
    "../ui/projects/budget/AddBudgetForm.tsx",
    "../ui/projects/budget/BudgetHoursInput.tsx",
    "../ui/projects/budget/CurrentWeekProgress.tsx",
    "../ui/projects/budget/GoalsRequired.tsx",
    "../ui/projects/budget/ManageProjectBudget.tsx",
    "../ui/projects/budget/ManageProjectsBudget.tsx",
    "../ui/projects/budget/ManageTimePrompt.tsx",
    "../ui/projects/budget/ProjectBudgetItem.tsx",
    "../ui/projects/budget/ProjectGoalInput.tsx",
    "../ui/projects/budget/ProjectGoalShyIndicator.tsx",
    "../ui/projects/budget/ProjectPreviousWeeks.tsx",
    "../ui/projects/budget/ProjectsBudgetList.tsx",
    "../ui/projects/budget/ProjectsBudgetOverview.tsx",
    "../ui/projects/api/useUpdateProjectMutation.ts"
  ],
  "exclude": ["node_modules", "next.config.js"]
}
